extends layout

block content
    h1= title

    if errors
        each error in errors
            p= error.msg

    form(method="POST")
        div
            label(for="name") Category name:
            br
            input(id="name" type="text" name="name" value=(data ? data.name : ""))
        div
            label(for="desc") Description:
            br
            textarea(id="desc" col="30" row="10" name="description" value=(data ? data.description : ""))
        div
            - const styles = { color: "blue" }
            button(type="submit" style=styles ) Create