extends layout

block content
  h1 #{title}: #{book.name}
  
  
  if book_instance.length
  
    p #[strong Delete the following book instaces before attempting to delete this book.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Book instance
    
      each book in book_instance
        
        a(href=book.url) #{book.imprint}
        p= book.status

  else
    p Do you really want to delete this Book?
    
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='bookid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete